<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent">

    <TextView
            android:text="@string/player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_gravity="center"/>
    <TextView
            android:text="@string/pointsInTurnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_columnSpan="1"
            app:layout_column="3"
            android:id="@+id/pointsInTurnLabel"
            app:layout_gravity="center"/>
    <TextView
            android:text="@string/rollBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3" app:layout_column="0"
            android:id="@+id/rollBtn"
            android:textColor="@android:color/holo_blue_light" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="@string/collectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3"
            app:layout_column="4"
            android:id="@+id/collectBtn"
            android:textColor="@android:color/holo_blue_light" android:textSize="18sp" android:textStyle="bold"/>
</android.support.v7.widget.GridLayout>