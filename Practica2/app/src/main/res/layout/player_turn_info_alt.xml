<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="7">

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player"
        android:textSize="@dimen/normalText"
        app:layout_columnSpan="7"
        app:layout_gravity="center" />

    <TextView
        android:id="@+id/pointsInTurnLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pointsInTurnLabel"
        android:textSize="@dimen/normalText"
        app:layout_columnSpan="7"
        app:layout_gravity="center" />

    <Space app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/rollBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rollBtn"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/button"
        android:textStyle="bold"
        app:layout_gravity="start" />

    <Space app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/collectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/collectBtn"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/button"
        android:textStyle="bold" />

    <Space app:layout_columnWeight="1"/>


</android.support.v7.widget.GridLayout>